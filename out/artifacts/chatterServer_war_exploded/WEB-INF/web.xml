<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <display-name>chatter</display-name>

    <!--入口, 注册登录等-->
    <servlet>
        <servlet-name>validationServlet</servlet-name>
        <servlet-class>cn.sourcecodes.chatterServer.servlet.validation.ValidationServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>validationServlet</servlet-name>
        <url-pattern>/validation</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>createChatterGroupServlet</servlet-name>
        <servlet-class>cn.sourcecodes.chatterServer.servlet.action.CreateChatterGroupServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>createChatterGroupServlet</servlet-name>
        <url-pattern>/action/createChatterGroup</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>appInitServlet</servlet-name>
        <servlet-class>cn.sourcecodes.chatterServer.servlet.AppInitServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>appInitServlet</servlet-name>
        <url-pattern>/appInit</url-pattern>
    </servlet-mapping>



    <!--过滤器filter写在这-->
    <filter>
        <description>设置response的编码的过滤器</description>
        <filter-name>encodingAndContentTypeFilter</filter-name>
        <filter-class>cn.sourcecodes.chatterServer.filter.EncodingAndContentTypeFilter</filter-class>

        <init-param>
            <description>设置返回的数据的编码</description>
            <param-name>encode</param-name>
            <param-value>UTF-8</param-value>
        </init-param>

        <init-param>
            <param-name>contentType</param-name>
            <param-value>application/json;charset=UTF-8</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>encodingAndContentTypeFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>



    <!--监听器写在这-->
    <listener>
        <listener-class>cn.sourcecodes.chatterServer.listener.MyServletListener</listener-class>
    </listener>



    <!--session的配置写在这-->
    <session-config>
        <session-timeout>10</session-timeout>
    </session-config>
</web-app>